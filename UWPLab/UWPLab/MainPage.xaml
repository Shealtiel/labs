<Page
    x:Class="UWPLab.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPLab"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RequestedTheme="Default">
        <StackPanel HorizontalAlignment="Center" Height="640" Margin="0,0,0,0" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                <Button Content="Back" Margin="0,0,0,0" VerticalAlignment="Stretch" Click="Back_Click" HorizontalAlignment="Stretch"/>
                <Button Content="Home" Margin="10,10,10,10" VerticalAlignment="Stretch" Click="Home_Click" HorizontalAlignment="Stretch" Width="400"/>
                <Button Content="Next" Margin="0,0,0,0" VerticalAlignment="Stretch" Click="Next_Click" HorizontalAlignment="Stretch"/>
            </StackPanel>
            <Frame Name="OurFrame"/>
        </StackPanel>
    </Grid>
</Page>
